<h1>New Recipe</h1>

<%= form_with scope: :recipe, url: recipes_path, local: true do |form| %>
  <p>
    <%= form.label :title  %><br>
    <%= form.text_field :title %>
  </p>

  <p>
    <%= form.label :author  %><br>
    <%= form.text_field :author %>
  </p>

  <p>
    <%= form.label :note %><br>
    <%= form.text_area :note %>
  </p>

  <p>
    <%= form.submit %>
  </p>

<% end %>

<%= link_to 'Back', recipes_path %>