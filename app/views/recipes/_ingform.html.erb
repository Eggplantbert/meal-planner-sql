<%= form_for(@recipe) do |form| %>
  <h2>Add an Ingredient: </h2>
  <%= form.fields_for :ingredients do |new| %>
    <p>
      <%= new.label :name %><br>
      <%= new.text_field :name %>
    </p>
    <p>
      <%= new.label :amount %><br>
      <%= new.number_field :amount %>
    </p>
    <p>
      <%= new.label :uom %><br>
      <%= new.text_field :uom %>
    </p>
    <p>
      <%= new.submit %>
    </p>
  <% end %>
<% end  %>
